<mvc:View height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:tnt="sap.tnt" controllerName="sap.f.sample.ShellBarWithSplitApp.controller.ShellBarWithSplitApp">
	<tnt:ToolPage id="toolPage">
		<tnt:header>
			<f:ShellBar title="{i18n>appTitle}"
				showMenuButton="true"
				homeIcon="/images/sap_logo.svg"
				menuButtonPressed="onMenuButtonPress"
				showProductSwitcher="true"
				productSwitcherPressed="loggedPopOver">
				<f:profile>
					<f:Avatar initials="A"/>
				</f:profile>
				<f:searchManager>
					<f:SearchManager/>
				</f:searchManager>
			</f:ShellBar>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation expanded="true" 
						selectedKey="{/selectedKey}" 
						itemSelect="onItemSelect">
				<tnt:NavigationList items="{path: '/navigation'}">
					<tnt:NavigationListItem text="{title}" 
											icon="{icon}" 
											enabled="{enabled}" 
											expanded="{expanded}" 
											items="{items}" 
											key="{key}">

						<tnt:NavigationListItem text="{title}" 
												key="{key}" 
												enabled="{enabled}">
						</tnt:NavigationListItem>
					</tnt:NavigationListItem>
				</tnt:NavigationList>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer id="pageContainer" initialPage="page1">
				<pages>
					<ScrollContainer id="page1" 
									 horizontal="false" 
									 vertical="true" 
									 height="100%">
						<App id="app"/>
					</ScrollContainer>
				</pages>
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>
